<common:PageBase x:Class="Brook.DuDuRiBao.Pages.HotStoriesPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:common="using:Brook.DuDuRiBao.Common"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:vm="using:Brook.DuDuRiBao.ViewModels"
                 RequestedTheme="{Binding Source={StaticResource StorageInfo},
                                          Path=AppTheme}"
                 mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <PaneThemeTransition Edge="Right" />
        </TransitionCollection>
    </Page.Transitions>
    <Page.DataContext>
        <vm:HotStoriesViewModel />
    </Page.DataContext>

    <Grid>
        <WebView common:WebViewExtend.StringContent="{Binding HotStories}"
                 DefaultBackgroundColor="White"
                 ScriptNotify="WebView_ScriptNotify" />
    </Grid>
</common:PageBase>
