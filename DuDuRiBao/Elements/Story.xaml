<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:common="using:Brook.DuDuRiBao.Common"
                    xmlns:local="using:Brook.DuDuRiBao.Elements"
                    xmlns:xp="using:XP">

    <DataTemplate x:Key="Story">
        <Grid>
            <Image Height="98"
                   Margin="-1, 0"
                   NineGrid="20, 20, 20, 20"
                   Source="ms-appx:///Assets/ListItemShadow.png"
                   Stretch="Fill" />
            <RelativePanel Height="88"
                           Margin="5, 0, 5, 0"
                           Background="White"
                           CornerRadius="5">
                <Image x:Name="CircleImage"
                       Width="40"
                       Height="40"
                       Margin="8"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Stretch="UniformToFill">
                    <Image.Source>
                        <BitmapImage UriSource="{Binding Posts[0].Circle.Thumbnail}" />
                    </Image.Source>
                </Image>
                <TextBlock x:Name="CircleName"
                           RelativePanel.RightOf="CircleImage"
                           Text="{Binding Posts[0].Circle.Name}" />
                <TextBlock x:Name="PosterTime"
                           RelativePanel.Below="CircleName"
                           RelativePanel.RightOf="CircleImage"
                           Text="{Binding Time}" />
                <TextBlock x:Name="PosterName"
                           RelativePanel.RightOf="PosterTime"
                           Text="{Binding Posts[0].Poster.Name}" />
                <Border CornerRadius="5" RelativePanel.Below="CircleImage">
                    <RelativePanel>
                        <Image x:Name="MainImage"
                               Width="80"
                               Height="80"
                               Margin="8"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Stretch="UniformToFill">
                            <Image.Source>
                                <BitmapImage x:Name="Bitmap" UriSource="{Binding Images[0]}" />
                            </Image.Source>
                        </Image>
                        <TextBlock x:Name="Content"
                                   Margin="8"
                                   FontWeight="Medium"
                                   LineHeight="24"
                                   RelativePanel.RightOf="MainItem_Image"
                                   Text="{Binding Title}"
                                   TextWrapping="Wrap" />
                    </RelativePanel>
                </Border>
            </RelativePanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="StoryWithoutImage">
        <Grid>
            <Image Height="106"
                   Margin="-1, 0"
                   NineGrid="20, 20, 20, 20"
                   Source="ms-appx:///Assets/ListItemShadow.png"
                   Stretch="Fill" />
            <RelativePanel Height="96"
                           Margin="5, 0, 5, 0"
                           Background="White"
                           CornerRadius="5">
                <TextBlock x:Name="MainItem_Content"
                           Margin="12, 8"
                           FontWeight="Medium"
                           LineHeight="24"
                           Text="{Binding title}"
                           TextWrapping="Wrap" />
            </RelativePanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="GroupHeader">
        <Border>
            <TextBlock Margin="5"
                       FontSize="14"
                       Foreground="Gray"
                       Text="{Binding title}" />
        </Border>
    </DataTemplate>
</ResourceDictionary>
